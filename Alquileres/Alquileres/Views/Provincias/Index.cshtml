@model IEnumerable<Alquileres.Models.Provincia>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Provincias</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Detalle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Detalle)
        </td>
        <td>
            @Html.ActionLink("Edita", "Edit", new { id=item.ProvinciaId }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ProvinciaId }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ProvinciaId }, new { @class = "btn btn-success" })
        </td>
    </tr>
}

</table>
